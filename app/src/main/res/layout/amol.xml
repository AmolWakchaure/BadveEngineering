<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/screen_color">


    <android.support.v7.widget.CardView
        android:id="@+id/a"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="3dp"
        card_view:contentPadding="1dp">


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">
                <!--<include-->
                <!--android:id="@+id/successFailRelativeLayout"-->
                <!--android:visibility="gone"-->
                <!--layout="@layout/success_fail"/>-->

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="5"

                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="10"
                        android:gravity="center_vertical|center_horizontal">

                        <ImageView
                            android:id="@+id/finishActivity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:onClick="backActivity"
                            android:src="@drawable/badve_logo" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1.5"

                            android:gravity="center_vertical">

                            <engineering.badve.badveengineering.widgets.MyTextView
                                android:id="@+id/testError"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10pt"
                                android:text="Badve Engineering Limited"
                                android:textColor="@color/colorPrimary"
                                android:textSize="15pt" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:gravity="center_horizontal|center_vertical"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <Button
                                    android:id="@+id/image"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Hardware"
                                    android:visibility="gone"

                                    />


                                <ImageView
                                    android:id="@+id/wifiImageView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:onClick="openWifi"
                                    android:src="@drawable/ic_signal_wifi_off_black_48dp" />

                                <TextView
                                    android:id="@+id/wifiNetworkName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Wifi"

                                    android:textColor="@color/colorPrimary" />


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"

                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="1"
                                    android:orientation="horizontal"
                                    android:weightSum="2">

                                    <engineering.badve.badveengineering.widgets.MyButton
                                        android:id="@+id/addCellsButton"
                                        android:layout_width="fill_parent"
                                        android:layout_height="fill_parent"
                                        android:layout_margin="2pt"
                                        android:layout_weight="1"
                                        android:background="@drawable/round_button"
                                        android:text="Add Cell"
                                        android:textColor="@color/colorWhite" />

                                    <engineering.badve.badveengineering.widgets.MyButton
                                        android:id="@+id/iotButton"
                                        android:layout_width="fill_parent"
                                        android:layout_height="fill_parent"
                                        android:layout_gravity="center_horizontal|center_vertical"
                                        android:layout_margin="2pt"

                                        android:layout_weight="1"
                                        android:background="@drawable/round_button"
                                        android:text="IoT"
                                        android:textAllCaps="false"
                                        android:textColor="@color/colorWhite"
                                        android:textSize="12pt" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_weight="1"
                                    android:gravity="center">

                                    <engineering.badve.badveengineering.widgets.MyTextView
                                        android:id="@+id/txt_date"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal|center_vertical"


                                        android:drawableLeft="@drawable/ic_alarm_black_24dp"
                                        android:drawablePadding="2dp"
                                        android:text="10/04/2017"
                                        android:textColor="@color/colorBlack"
                                        android:textSize="9pt"
                                        android:textStyle="bold" />


                                </LinearLayout>


                            </LinearLayout>

                            <!--<LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:weightSum="2"
                                android:layout_weight="1"
                                android:gravity="center_vertical|center_horizontal"
                                android:orientation="horizontal">

                                <Button
                                    android:id="@+id/image"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Hardware"
                                    android:visibility="gone"

                                    />



                                <ImageView
                                    android:id="@+id/wifiImageView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:onClick="openWifi"
                                    android:layout_weight="1"
                                    android:src="@drawable/ic_signal_wifi_off_black_48dp" />

