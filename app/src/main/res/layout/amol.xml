                                     android:id="@+id/wifiNetworkName"
                                     android:layout_width="wrap_content"
                                     android:layout_height="wrap_content"
                                     android:text="Wifi"

                                     android:textColor="@color/colorPrimary" />&ndash;&gt;

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <engineering.badve.badveengineering.widgets.MyButton
                                    android:id="@+id/iotButton"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal|center_vertical"
                                    android:layout_marginLeft="6pt"
                                    android:layout_marginRight="6pt"

                                    android:layout_marginTop="3pt"
                                    android:background="@drawable/round_button"
                                    android:text="IoT"
                                    android:textAllCaps="false"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="12pt" />

                                <engineering.badve.badveengineering.widgets.MyTextView
                                    android:id="@+id/txt_date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_horizontal|center_vertical"
                                    android:drawableLeft="@drawable/ic_alarm_black_24dp"

                                    android:drawablePadding="2dp"
                                    android:text="10/04/2017"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="9pt"
                                    android:textStyle="bold" />


                            </LinearLayout>-->


                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_margin="3pt"
                        android:layout_weight="1.5"
                        android:background="@color/screen_color"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"

                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"

                                android:layout_marginRight="0.1pt"
                                android:layout_weight="5"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_marginBottom="0.1pt"
                                    android:layout_weight="1"
                                    android:background="#F8BBD0"
                                    android:gravity="center_horizontal|center_vertical">

                                    <engineering.badve.badveengineering.widgets.MyTextView
                                        android:id="@+id/textView"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"

                                        android:text="Cell"
                                        android:textColor="@color/colorBlack"
                                        android:textSize="12pt"

                                        android:textStyle="bold" />


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_marginTop="0.1pt"
                                    android:layout_weight="1"
                                    android:background="#F8BBD0"
                                    android:gravity="center_horizontal|center_vertical">

                                    <engineering.badve.badveengineering.widgets.MyTextView

                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"

                                        android:text="Shift"
                                        android:textColor="@color/colorBlack"
                                        android:textSize="12pt"
                                        android:textStyle="bold" />

                                </LinearLayout>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_margin="0.3pt"
                                android:layout_marginLeft="0.1pt"
                                android:layout_weight="2"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_marginBottom="0.1pt"
                                    android:layout_weight="1"
                                    android:background="#F8BBD0">


                                    <RelativeLayout
                                        android:layout_width="fill_parent"
                                        android:layout_height="fill_parent">

                                        <ScrollView
                                            android:layout_width="fill_parent"
                                            android:layout_height="fill_parent">

                                            <RelativeLayout
                                                android:layout_width="fill_parent"
                                                android:layout_height="fill_parent">


                                                <engineering.badve.badveengineering.widgets.MyTextView
                                                    android:id="@+id/txt_cell_name"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginLeft="3pt"
                                                    android:layout_marginTop="1pt"
                                                    android:text="-"
                                                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                                                    android:textColor="@color/colorBlack"
                                                    android:textStyle="bold" />

                                            </RelativeLayout>

                                        </ScrollView>

                                    </RelativeLayout>


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_marginTop="0.1pt"
                                    android:layout_weight="1"
                                    android:background="#F8BBD0"
                                    android:gravity="center_vertical|center_horizontal">

                                    <engineering.badve.badveengineering.widgets.MyTextView
                                        android:id="@+id/txt_shift_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="-"
                                        android:textColor="@color/colorBlack"
                                        android:textSize="12pt"
                                        android:textStyle="bold" />


                                </LinearLayout>


                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_margin="0.3pt"
                                android:layout_weight="1"
                                android:background="@color/colorWhite"
                                android:gravity="center_vertical">

                                <engineering.badve.badveengineering.widgets.MyTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="20pt"
                                    android:text="In Target"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="12pt"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_margin="0.3pt"
                                android:layout_weight="1"
                                android:background="@color/colorWhite"
                                android:gravity="center_horizontal|center_vertical">

                                <engineering.badve.badveengineering.widgets.MyTextView
                                    android:id="@+id/inTargetTextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="-"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="17pt"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_margin="0.3pt"
                                android:layout_weight="1"
                                android:background="@color/colorWhite"
                                android:gravity="center_vertical">

                                <engineering.badve.badveengineering.widgets.MyTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="20pt"
                                    android:text="In Count"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="12pt"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/inCountLinearLayout"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_margin="0.3pt"
                                android:layout_weight="1"
                                android:background="@color/colorWhite"
                                android:gravity="center_horizontal|center_vertical">

                                <engineering.badve.badveengineering.widgets.MyTextView
                                    android:id="@+id/inCountTextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="-"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="17pt"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_margin="0.3pt"
                                android:layout_weight="1"
                                android:background="@color/colorWhite"
                                android:gravity="center_vertical">

                                <engineering.badve.badveengineering.widgets.MyTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="20pt"
                                    android:text="Out Count"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="12pt"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/outCountLinearLayout"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_margin="0.3pt"
                                android:layout_weight="1"
                                android:background="@color/colorWhite"
                                android:gravity="center_horizontal|center_vertical">

                                <engineering.badve.badveengineering.widgets.MyTextView
                                    android:id="@+id/txt_out_count"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="-"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="17pt"
                                    android:textStyle="bold" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_margin="3pt"
                        android:layout_weight="1"
                        android:background="@color/screen_color"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="6"

                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_margin="0.3pt"
                                android:layout_weight="1"
                                android:background="#F8BBD0"
                                android:gravity="center_vertical|center_horizontal">

                                <engineering.badve.badveengineering.widgets.MyTextView
                                    android:id="@+id/myTextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:text="Type"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="10pt"
                                    android:textStyle="bold" />

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_margin="0.3pt"
                                android:layout_weight="1"
                                android:background="#F8BBD0"
                                android:gravity="center_vertical|center_horizontal">

                                <engineering.badve.badveengineering.widgets.MyTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:text="In Target"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="10pt"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_margin="0.3pt"
                                android:layout_weight="1"
                                android:background="#F8BBD0"
                                android:gravity="center_vertical|center_horizontal">

                                <engineering.badve.badveengineering.widgets.MyTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:text="In Count"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="10pt"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_margin="0.3pt"
                                android:layout_weight="1"

                                android:background="#F8BBD0"
                                android:gravity="center_vertical|center_horizontal">

                                <engineering.badve.badveengineering.widgets.MyTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:text="Out Count"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="10pt"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_margin="0.3pt"
                                android:layout_weight="1"

                                android:background="#F8BBD0"
                                android:gravity="center_vertical|center_horizontal">

                                <engineering.badve.badveengineering.widgets.MyTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"

                                    android:text="Shift"
                                    android:textColor="@color/colorBlack"
                                    android:textSize="10pt"
                                    android:textStyle="bold" />

                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1">

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/designationTypeId"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent">

                            </android.support.v7.widget.RecyclerView>


                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>


            <RelativeLayout
                android:id="@+id/hideRelativeLayout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/colorWhite"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true">

                    <ImageView
                        android:id="@+id/successFailImageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/ic_fail" />

                    <engineering.badve.badveengineering.widgets.MyTextView
                        android:id="@+id/progressTextViewEnglish"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/successFailImageView"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5pt"
                        android:text="You do not belongs to this cell."
                        android:textColor="@color/colorAccent"
                        android:textSize="15pt"
                        android:textStyle="bold" />

                    <engineering.badve.badveengineering.widgets.MyTextView
                        android:id="@+id/progressTextViewHindi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/progressTextViewEnglish"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="8pt"
                        android:text="@string/noentry_hindi"
                        android:textColor="@color/colorAccent"
                        android:textSize="15pt"
                        android:textStyle="bold" />

                </RelativeLayout>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/hideRelativeLayoutGate"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/colorWhite"
                android:visibility="gone">

                <com.singh.daman.proprogressviews.DoubleArcProgress
                    android:id="@+id/progress"
                    android:layout_width="35pt"
                    android:layout_height="35pt"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    app:arcRadius="30dp"
                    app:colorofArc="@color/colorPrimary" />

                <engineering.badve.badveengineering.widgets.MyTextView
                    android:id="@+id/progressTextViewGate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/progress"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5pt"
                    android:text="Please wait..."
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

            </RelativeLayout>


        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>

