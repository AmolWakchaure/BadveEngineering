<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:layout_height="20pt">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:orientation="horizontal"

            android:layout_height="fill_parent">
            <TextView
                android:id="@+id/idTextView"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:text="id"
                android:textSize="5pt"
                android:gravity="center_vertical"
                android:layout_height="fill_parent" />
            <TextView
                android:id="@+id/rfidNumber"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:textSize="5pt"
                android:text="rfidNumber"
                android:gravity="center_vertical"
                android:layout_height="fill_parent" />
            <TextView
                android:id="@+id/bnumber"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:text="bnumber"
                android:textSize="5pt"
                android:gravity="center_vertical"
                android:layout_height="fill_parent" />
            <TextView
                android:id="@+id/designation"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:textSize="5pt"
                android:text="designation"
                android:gravity="center_vertical"
                android:layout_height="fill_parent" />
            <TextView
                android:id="@+id/contractor_code"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:textSize="5pt"
                android:text="contractor_code"
                android:gravity="center_vertical"
                android:layout_height="fill_parent" />
            <TextView
                android:id="@+id/cellId"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:text="cellId"
                android:textSize="5pt"
                android:gravity="center_vertical"
                android:layout_height="fill_parent" />
            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:textSize="5pt"
                android:gravity="center_vertical"
                android:text="date"
                android:layout_height="fill_parent" />
            <TextView
                android:id="@+id/sstatus"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="sstatus"
                android:textSize="5pt"
                android:layout_height="fill_parent" />

        </LinearLayout>


    </LinearLayout>
    <TextView
        android:layout_width="fill_parent"
        android:background="@color/colorPrimary"
        android:layout_height="0.1pt" />

</LinearLayout>