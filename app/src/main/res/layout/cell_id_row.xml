<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="3pt"

            android:layout_weight="1"
            android:orientation="vertical">

            <engineering.badve.badveengineering.widgets.MyTextView
                android:id="@+id/cellIdRow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10pt"
                android:text="Cell Id"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

            <engineering.badve.badveengineering.widgets.MyTextView
                android:id="@+id/cellNameIdRow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10pt"
                android:text="Cell Name"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large" />

        </LinearLayout>

        <LinearLayout

            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="3"

            android:gravity="center_vertical|center_horizontal">

            <Button
                android:id="@+id/removeCellId"
                android:layout_width="fill_parent"
                android:layout_height="20pt"
                android:layout_margin="2.5pt"
                android:background="@color/colorPrimary"
                android:text="Delete"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite" />

        </LinearLayout>


    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="3pt">

    </View>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1pt"

        android:background="#666666">

    </View>

</LinearLayout>